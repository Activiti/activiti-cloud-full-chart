{{- $useExistingClientSecret := .Values.global.keycloak.useExistingClientSecret -}}
{{- $clientId :=  "" -}}
{{- $clientSecret := "" -}}
{{- if $useExistingClientSecret -}}
{{- $clientSecretName := tpl .Values.global.keycloak.clientSecretName $ -}}
{{- $clientId = include "getKubernetesSecret" (dict "Namespace" .Release.Namespace "Name" $clientSecretName "Key" "clientId") | required "existing clientId secret key is empty" -}}
{{- $clientId = include "getKubernetesSecret" (dict "Namespace" .Release.Namespace "Name" $clientSecretName "Key" "clientSecret") | required "existing clientSecret secret key is empty" -}}
{{- else -}}
{{- $clientId = tpl .Values.global.keycloak.clientId $ -}}
{{- $clientSecret = .Values.global.keycloak.clientSecret -}}
{{- end -}}
{
  "realm": "activiti",
  "enabled": true,
  "sslRequired": "none",
  "loginTheme": "alfresco",
  "internationalizationEnabled": true,
  "supportedLocales": [
    "de",
    "no",
    "ru",
    "sv",
    "pt-BR",
    "lt",
    "en",
    "it",
    "fr",
    "zh-CN",
    "es",
    "ja",
    "ca",
    "nl"
  ],
  "defaultLocale": "en",
  "roles": {
    "realm": [
      {
        "name": "ACTIVITI_ADMIN",
        "composites": {
          "client": {
            "realm-management": [
              "view-users",
              "view-clients"
            ]
          }
        }
      },
      {
        "name": "ACTIVITI_USER",
        "composites": {
          "client": {
            "realm-management": [
              "view-users",
              "view-clients"
            ]
          }
        }
      },
      {
        "name": "ACTIVITI_MODELER",
        "composites": {
          "client": {
            "realm-management": [
              "view-users",
              "view-clients"
            ]
          }
        }
      }
    ],
    "client": {
      "activiti": [
        {
          "name": "ACTIVITI_USER",
          "scopeParamRequired": false,
          "composite": false,
          "clientRole": true
        },
        {
          "name": "ACTIVITI_ADMIN",
          "scopeParamRequired": false,
          "composite": false,
          "clientRole": true
        }
      ]
    }
  },
  "clients": [
    {
      "clientId": "activiti",
      "directAccessGrantsEnabled": true,
      "enabled": true,
      "implicitFlowEnabled": true,
      "protocolMappers": [
        {
          "config": {
            "access.token.claim": true,
            "claim.name": "groups",
            "full.path": false,
            "id.token.claim": true,
            "userinfo.token.claim": true
          },
          "consentRequired": false,
          "name": "group list",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-group-membership-mapper"
        }
      ],
      "publicClient": true,
      "redirectUris": [
        "*"
      ],
      "webOrigins": [
        "*"
      ]
    }, {
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "clientId": "{{ $clientId }}",
      "secret": "{{ $clientSecret }}",
      "redirectUris": [],
      "webOrigins": [],
      "bearerOnly": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "fullScopeAllowed": true
    }
  ],
  "groups": [],
  "users": [
    {
      "username": "service-account-{{ $clientId }}",
      "enabled": true,
      "serviceAccountClientId": "{{ $clientId }}",
      "clientRoles": {
        "realm-management": ["query-realms", "view-users"]
      }
    }
  ]
}
